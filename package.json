{
	"name": "gluon-language-server",
	"description": "Language server for the gluon programming language",
	"author": "Markus Westerlind",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "gluon-lang",
	"engines": {
		"vscode": "^0.10.10"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:gluon"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [{
            "id": "gluon",
            "aliases": ["Gluon", "gluon"],
            "extensions": [".glu"],
            "configuration": "./gluon.configuration.json"
        }],
        "grammars": [{
            "language": "gluon",
            "scopeName": "source.glu",
            "path": "./syntaxes/gluon.tmLanguage"
		}],
		"configuration": {
			"type": "object",
			"title": "Gluon configuration",
			"properties": {
				"gluon.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"gluon.language-server.path": {
					"type": ["string", "null"],
					"default": null,
					"description": "Specifies the path to the language server binary."
				}
			}
		}
	},	
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
		"build-server": "cargo build --release",
		"postinstall": "node ./node_modules/vscode/bin/install && cargo build --release"
	},
	"devDependencies": {
		"typescript": "^1.8.9",
		"vscode": "^0.11.0"
	},
	"dependencies": {
		"vscode-languageclient": "^2.2.1"
	}
}